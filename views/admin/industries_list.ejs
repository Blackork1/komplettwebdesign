          <td><code><%= r.slug %></code></td>
          <td><%= new Date(r.updated_at).toLocaleString('de-DE') %></td>
          <td class="text-end">
            <a class="btn btn-sm btn-outline-secondary" href="/webdesign-<%= r.slug %>" target="_blank">Seite ansehen</a>
            <a class="btn btn-sm btn-primary" href="/admin/industries/<%= r.id %>/edit">Bearbeiten</a>
            <form method="post" action="/admin/industries/<%= r.id %>/id/delete" style="display:inline"></form>
