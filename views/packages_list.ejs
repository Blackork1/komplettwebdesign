            "@type": "ListItem",
            "position": 1,
            "name": "Startseite",
            "item": "https://www.komplettwebdesign.de/"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Pakete",
            "item": "https://www.komplettwebdesign.de/pakete"
          }
        ]
      }
    </script>

