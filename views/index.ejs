                    <% if (!latestPost.isDefault) { %>
                    <p class="date">
                      vor <%= Math.floor((Date.now() - new Date(latestPost.created_at)) / (1000*60*60*24)) %>
                      Tagen
                    </p>
                    <% } %>

                    <!-- Link zum Artikel -->
                    <a href="/blog/<%= latestPost.slug %>" class="btn btn-primary mb-2">
                      Zum Artikel
                    </a>
                    <a href="/blog" class="btn btn-tertiary mb-2">Zum Blog</a>
                  </div>
                </article>
              </div>

              <!-- Rechts: Kunden-Rezension (1/3) -->
              <div class="testimonial">
                <div class="content-card animate-on-scroll">
                  <h3>Kundenstimme und erstellte Website</h3>
                  <div class="review-card">
                    <div class="p2rem">
                      <!-- Avatar -->
                      <img src="<%= review.avatar_url %>" alt="Avatar von <%= review.author %>" class="review-avatar" loading="lazy" />

                      <!-- Zitat -->
                      <blockquote>
                        <%- review.content.replace( /https?:\/\/[^\s]+/gi, match=> {
                              // ↓ Linktext hübsch machen (https:// & www. entfernen)
                              const display = match.replace(/^https?:\/\/(www\.)?/i, '');
                              return `<a href="${match}" target="_blank" rel="noopener">${display}</a>`;
                              }
                              )
                              %>

                      </blockquote>

                      <!-- Autor -->
                      <cite>
                        — <%= review.author %>
                        <% if (review.isDefault) { %>
                        <small>(Demnächst echte Stimmen…)</small>
                        <% } %>
                      </cite>
                    </div>
                    <a class="image-review" href="https://www.zuraltenbackstube.de" aria-label="Hier ist der Hero-Bereich der Website ZurAltenBackstube zu erkennen." loading="lazy"></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </section>

