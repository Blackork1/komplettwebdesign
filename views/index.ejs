<style>
  .linkColor {
    color: #d75b36;
  }

  .primaryColor {
    color: var(--color-primary);
  }

  .card-back a.btn.btn-tertiary {
    position: relative;
    bottom: 60px;
  }

  .hero-button {
    color: #fafafa;
    background-color: var(--color-primary);
  }

  .hero-button:hover {
    border-color: white;
  }

  .heroImage img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .heroImage {
    position: absolute;
    width: 100%;
    z-index: -5;
    height: 1026px;
  }

  .review-card {
    align-items: center;
    display: flex;
    grid-template-columns: 1fr 2fr;
    height: 100%;
    justify-items: center;
    margin-top: -50px;
    padding: 1.5rem;
    text-align: center;
    flex-direction: column;
  }

  .badge {
    transition: all 0.2s ease;
  }

  .badge:hover {
    transform: scale(1.02) translateY(-2px);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.3);
  }

  .service-list {
    margin-top: 1rem;
  }

  @media (max-width: 400px) {
    .hero-section {
      padding: 0px;
    }
  }

  @media (max-width: 768px) {
    .scroll-snap-align {
      scroll-snap-align: start;
    }

    .scroll-snap-container {
      scroll-snap-type: x mandatory;
      flex-wrap: nowrap;
      overflow-y: auto;
    }

    .heroImage {
      height: 1200px;
    }
  }

  @media (max-width: 1050px) {
    .latest-blog article h4 a {
      color: var(--color-primary);
      font-family: var(--font-heading);
      font-size: 1rem;
    }

    .home-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

