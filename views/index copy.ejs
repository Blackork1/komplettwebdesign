    <script>
      // Flip cards
      document.querySelectorAll(".card-container").forEach((card) => {
        card.addEventListener("click", () => {
          card.classList.toggle("flipped");
        });
      });

      // Scroll Indicator (einfach)
      const sections = ["hero","erklaerung","features","leistungen","blog-reviews","preise","branchen","cta","footer"]
        .map(id => document.getElementById(id)).filter(Boolean);
      const links = [...document.querySelectorAll('.section-icons .icon-link')];
      const fill = document.querySelector('.progress-fill');

      function onScroll(){
        const y = window.scrollY + window.innerHeight * 0.35;
        let idx = 0;
        sections.forEach((sec,i)=>{ if (sec.offsetTop <= y) idx = i; });
        links.forEach((a,i)=> a.classList.toggle('active', i===idx));
        const progress = Math.min(1, (y / (document.body.scrollHeight - window.innerHeight)));
        if (fill) fill.style.height = (progress * 100) + '%';
      }
      document.addEventListener('scroll', onScroll, {passive:true});
      window.addEventListener('load', onScroll);
    </script>

