<div class="pricing-grid">
  <% packages.forEach(pkg=> { %>
  <div class="pricing-card animate-on-scroll" id="pkg-<%= pkg.id %>">
    <h3>
      <%= pkg.name %>
    </h3>
    <div class="p1rem">
      <!-- Kurzbeschreibung -->
      <!-- <% if (pkg.description) { %>
                  <p class="package-description"><%= pkg.description %></p>
                  <% } %> -->

      <!-- Mehrzeiliger Detail-Text -->
      <!-- <% pkg.details.forEach(line => { %>
                  <p class="package-detail"><%= line %></p>
                  <% }); %> -->

      <!-- Preis -->
      <p class="price">
        <%= pkg.price %>
      </p>

      <!-- Bullet-Points -->
      <ul class="features-list">
        <% pkg.features.forEach(feat=> { %>
        <li>
          <%= feat %>
        </li>
        <% }); %>
      </ul>

      <!-- Button -->
      <form class="checkout-form" action="/create-checkout-session" method="POST">
        <input type="hidden" name="packageId" value="<%= pkg.id %>" />
        <input type="hidden" name="mode" value="once" />
        <button type="submit" class="btn btn-primary">
          Auswählen
          <span class="visually-hidden">Paket für <%= pkg.price %> kaufen</span>
        </button>
      </form>
    </div>
  </div>
  <% }); %>
</div>

