<style>
  .hidden { display:none; }
  #accept-all:hover, #accept-necessary:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 8px rgba(0,0,0,.2);
  }
</style>
<% const isEn = typeof lng !== 'undefined' && lng === 'en'; %>

<!-- IMMER im DOM; initial versteckt. Kein EJS-if mehr -->
<div id="cookie-banner" class="hidden"
  style="background:#fff;color:#000;padding:1rem;position:fixed;bottom:0;width:100%;
         text-align:center;z-index:1000;box-shadow:0 -4px 1px -1px rgb(255 255 255);">
  <p>
    <%= isEn ? 'We use cookies for analytics and marketing. No personal data is stored.' : 'Wir verwenden Cookies fuer Analyse und Marketing. Es werden keine persoenlichen Daten gespeichert.' %>
    <%= isEn ? 'To use the chatbot, your messages must be stored.' : 'Fuer das Nutzen des ChatBots ist es erforderlich, dass deine Fragen gespeichert werden.' %>
    <a href="/datenschutz" style="color:#942605"><%= isEn ? 'Privacy policy' : 'Datenschutzvereinbarung' %></a>
  </p>
  <button id="accept-all"
    style="background:rgb(52 195 129)!important;color:#000;border:none;padding:.5rem 1rem;margin:0 .5rem;border-radius:8px;transition:ease .3s;">
    <%= isEn ? 'Accept all' : 'Alles akzeptieren' %>
  </button>
  <button id="accept-necessary"
    style="background:#dededecf;color:#000;border:none;padding:.5rem 1rem;margin:0 .5rem;border-radius:8px;transition:ease .3s;">
    <%= isEn ? 'Only necessary' : 'Nur Notwendiges' %>
  </button>
</div>

<script src="/js/cookie-consent.js?v=<%= encodeURIComponent(assetVersion || '1') %>" defer></script>
